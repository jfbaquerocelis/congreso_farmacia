@import 'nib/vendor'
vendor-prefixes = o ms webkit moz official

Blue = #09126D
Green = #C5E1A5
darkGreen = #329036

@font-face {
	font-family: 'icomoon';
	src:url('../fonts/icomoon.eot?-iht9o3');
	src:url('../fonts/icomoon.eot?#iefix-iht9o3') format('embedded-opentype'),
		url('../fonts/icomoon.woff?-iht9o3') format('woff'),
		url('../fonts/icomoon.ttf?-iht9o3') format('truetype'),
		url('../fonts/icomoon.svg?-iht9o3#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

/*UI Components*/
.link-active
	background red

body
	font-family 'Droid Serif'
	color #333
	font-size 16px
	background-image url('../img/cordoba.png')
	background-size 100%
	background-attachment fixed
.overlay
	display none
	position fixed
	background black
	opacity .5
	width 100vw
	height 100vh
	z-index 2

/*Zone Header*/
.Header
	color Blue
	width 80%
	margin 0 auto
	position relative
.Header-contentText
	width 50%
	padding 2.5em 0
.Header-iii
	text-shadow 1px 1px 2px #666
	font-size 10em
	margin 0
.Header-congress
	text-shadow 1px 1px 2px #666
	vertical-align middle
	font-size .4em
.Header-rest
	font-size 2em
	text-shadow 1px 1px 2px #666
	display block
	text-align center
	margin -1em 0
.Header-subtitle
	text-align center
	margin 2em 0 0 0
.Header-info
	margin 0
	text-align center
	text-shadow 1px 1px 2px #666
	font-size .9em
	
/*Zone Menu*/
.Menu
	font-family 'Open Sans'
	display inline-block
	position absolute
	padding 0 0 0 2em
	font-size 1.05em
	border-radius 0 0 0 3em
	background #ffcdd2
	border-bottom 2px solid #eebcc1
	right 0
.Menu-list
	margin 0
	padding 0
.Menu-listItem
	display inline-block
.Menu-linkItem
	text-decoration none
	color #333
	font-weight bold
	padding .8em .5em
	display inline-block
	transition .2s all ease
	border-top 5px solid transparent
	&:hover
		border-top 5px solid #EF5350
		color #EF5350
		text-decoration none

/*Zone Congress - Humax - Hotel - Speaker - Contact*/
.Congress
.Humax
.Speaker
.Contact
.Hotel
	width 80%
	margin 0 auto
	background white
	box-shadow 1px 2px 5px rgba(0, 0, 0, .5)
	padding 1em 0
.Congress-article
.Congress-articleCal
.Contact-article
	width 80%
	margin 0 auto
	line-height 1.5em
.Humax-article
	display none
.Congress-description a
.Humax-description a
	color Blue
	&:hover
		color darkblue
.Congress-hide
	display none
	font-style italic
	color #EF5350
	cursor pointer
	&:hover
		text-decoration underline
.Congress-more
	font-style italic
	color #EF5350
	font-size 1.1em
	cursor pointer
	&:hover
		text-decoration underline
.Congress-showMore
	display none
.Congress-listButton
	margin 0
	padding 0
	text-align center
.Congress-listItem
	display inline-block
.Congress-linkItem
	padding 0.5em 1em
	color #333
	display block
	margin 1em 0
	&:hover
		text-decoration none
.calendar
.place
.price
	margin .5em
	cursor pointer
	font-size 2em
	transition .3s all ease
.calendar
	&:hover
		transform rotate(-10deg)
		color #EF5350
	&:hover ~ p
		color #EF5350
.place
	&:hover
		transform rotate(-10deg)
		color #EF6C00
	&:hover ~ p
		color #EF6C00
.price
	&:hover
		transform rotate(-10deg)
		color #43A047
	&:hover ~ p
		color #43A047
.calendar:before
	font-size 2em
	font-family 'icomoon'
	content "\e953"
	margin 0 .2em
.place:before
	font-size 2em
	margin 0 .2em
	font-family 'icomoon'
	content "\e948"
.price:before
	font-size 2em
	margin 0 .2em
	font-family 'icomoon'
	content "\e93b"
.pencil
	font-size 3.5em
	transition .3s all ease
	&:hover
		transform rotate(10deg)
		color #FFD600
	&:hover ~ p
		color #FFD600
.hotel
	font-size 3.5em
	transition .3s all ease
	&:hover
		transform rotate(-10deg)

#calendar
#place
#price
#pencil
	display none
.Congress-calendar
.Congress-price
	font-size .9em
	font-family 'Open Sans'
.Congress-price
	width 50%
	margin 0 auto
.Congress-calendarHeader th
.Congress-priceHeader th
	text-align center
	font-size 1.1em
	background #74c6fe
	color white
	transition .5s all ease
.Congress-calendar th:nth-child(1)
.Congress-calendar th:nth-child(2)
	width 20%
.Congress-calendar td
.Congress-price td
	text-align center
.Congress-calendarHeader:hover th
	cursor pointer
	background #52a4dc
.Congress-calendar tbody
	display none
.Congress-back
	color #EF5350
	&:hover
		cursor pointer
		text-decoration underline

/*Zone Humax*/
.Humax-contentLogo
	margin 1em 0
	text-align center
	width 100%
.Humax-logo
	width 22em
.Humax-contentImg
	text-align center
	position relative
	cursor pointer
	margin 1em 0
	&:hover .Humax-overlayImg
		display block
.Humax-img
	width 20em
.Humax-menuLeft
	font-family 'Open Sans'
	background #EEE
	box-shadow 1px 1px 5px #666
	margin 0 .5em
.Humax-list
	padding 1em
	list-style none
.Humax-linkItem
	color #333
	margin .2em 0
	display block
	transition .5s all ease
	&:hover
		margin-left .5em
		color #EF5350
ol li
	margin 1em 0

/*Zone Hotel*/
.Hotel-message
	font-size .9em
	margin 0 auto 1em
	width 50%
	border 1px solid #666
	text-align center
	padding .5em
.Hotel-list
	margin 0
	font-family 'Open Sans'
.Hotel-listItem
	cursor pointer
	display inline-block
	transition .5s all ease
	&:hover
		text-decoration underline
		color #EF5350
.Hotel-article
	display none
	box-shadow 1px 1px 5px #666
	width 90%
	padding 0 1em 1em
	margin 1.5em auto
.Hotel-name
	padding-bottom .2em
	border-bottom 2px solid #EEE
	text-align center
.Hotel-contentBanner
	margin 0
	width 100%
.Hotel-banner	
	width 100%

/*Zone Speaker*/
.Speaker
	position relative
.Speaker-contentArticle
	font-family 'Open Sans'
	width 90%
	margin 0 auto
.Speaker-article
	width 33%
	display inline-block
.Speaker-contentAvatar
	text-align center
	&:hover
		cursor pointer
	&:hover .Speaker-avatar
		box-shadow 1px 1px 5px #666
.Speaker-avatar
.Speaker-cardAvatar
	width 10em
	height 10em
	background #DDD
	border-radius 50%
	transition .5s all ease
.Speaker-card
	background white
	position absolute
	top 0
	padding 1.5em
	width 30em
	border-radius 3px
	border 3px solid #999
	z-index 3
	opacity 0
	left -100%
	box-shadow inset 0 -1px 5px #666
.Speaker-cardAvatar
	width 5em
	height 5em
	margin-right 1em
	float left
.Speaker-cardName
	margin-bottom 0
	padding-bottom .2em
	border-bottom 1px solid #DDD
.Speaker-cardDescription
	font-family 'Droid Serif'
	margin 2em 0 0 0
	font-size .9em
	font-style italic

/*Zone Footer*/
.Footer
	background white
	margin 1em 0 0 0
	bottom 0
	height 10em
	text-align center
	box-shadow 0 -1px 5px #AAA
.Footer-content
	position relative
	width 95%
	margin 0 auto
.Footer-listOrganizer
	position absolute
	margin .5em 0 0 0
	padding 0
.Footer-listSponsor
	top 0
	right 0
	position absolute
	margin .5em 0 0 0
	padding 0
.Footer-titleOrganizer
.Footer-titleSponsor
	margin 0
	margin-bottom .5em
.Footer-organizerItem
.Footer-sponsorItem
	display inline-block
	margin 0 1em
.Footer-linkOrganizer
.Footer-linkSponsor
	text-decoration none
.Footer-logo
	width 5em
	vertical-align middle
.Footer-logo[src="img/acopterfar.png"]
	width 9em
.Footer-logo[src="img/humax.png"]
	width 9em
	margin-top 1em
.Footer-message
	padding 4em 0 0 0
	display block
.Footer-developer
	margin 0
	padding-bottom 1em
.Footer-developer a
	color darkGreen
	&:hover
		color darkgreen